[Unit]
Description=Mount overlay for /nix/var
ConditionPathIsMountPoint=!/nix/var
DefaultDependencies=no
After=local-fs.target
Before=nix-daemon.service

[Mount]
What=overlay
Where=/nix/var
Type=overlay
Options=lowerdir=/nix/var,upperdir=/var/lib/nix-overlay/upper,workdir=/var/lib/nix-overlay/work

[Install]
WantedBy=local-fs.target
